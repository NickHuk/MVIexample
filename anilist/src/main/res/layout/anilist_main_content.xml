<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:id="@+id/error_footer_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      />

  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
      android:id="@+id/anime_srl"
      android:layout_width="@dimen/width_anime_list"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@id/total_footer_tv"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/anime_erv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:listitem="@layout/item_anime"
        />
  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/page_loading_pb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_page_loading_pb"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/error_footer_tv"
        />

    <TextView
        android:id="@+id/total_footer_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_page_loading_pb"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/page_loading_pb"
        />

    <View
        android:id="@+id/dim_overlay_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semi_transparent_black"
        android:clickable="true"
        android:focusable="true"
        />
</androidx.constraintlayout.widget.ConstraintLayout>